@model IEnumerable<AppUser>
@{
	ViewData["Title"] = "List User";
}

<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-with"/>
	<title>Index</title>
</head>
<body>
	<h3>List User</h3>

	<a class="btn btn-primary" asp-action="Register" asp-controller="User">Add User</a>
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>User name</th>
				<th>Email</th>
				<th>Phone</th>
				<th>Role</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var user in Model)
			{
				<tr>
					<td>@user.Id</td>
					<td>@user.UserName</td>
					<td>@user.Email</td>
					<td>@user.PhoneNumber</td>
					<td></td>
					<td>
						<a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="User" asp-route-Id="@user.Id">Edit</a>
						<a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="User" asp-route-Id="@user.Id">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</body>
</html>